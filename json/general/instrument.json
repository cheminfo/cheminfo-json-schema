{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "Location": {
            "description": "Describes the location of some object.",
            "properties": {
                "building": {
                    "description": "Name or code of the building",
                    "examples": [
                        "I17",
                        "Main building"
                    ],
                    "type": "string"
                },
                "code": {
                    "description": "Internal code that is used to identify the location",
                    "examples": [
                        "I17 1 B3"
                    ],
                    "type": "string"
                },
                "entity": {
                    "description": "Name of the institution",
                    "examples": [
                        "EPFL",
                        "Heriot-Watt University"
                    ],
                    "type": "string"
                },
                "room": {
                    "description": "Name or code of the room in which the object is localized",
                    "examples": [
                        "1 B3",
                        "Lab 1"
                    ],
                    "type": "string"
                }
            },
            "type": "object"
        }
    },
    "description": "The instrument with which a spectrum was measured.\nCHMO: 0000998",
    "properties": {
        "location": {
            "$ref": "#/definitions/Location"
        },
        "manufacturer": {
            "description": "The name of the instrument manufacturer",
            "examples": [
                "Microtrac Retsch GmbH",
                "Bruker"
            ],
            "type": "string"
        },
        "model": {
            "description": "The name of the instrument.",
            "examples": [
                "BELSORP MAX II"
            ],
            "type": "string"
        },
        "serialNumber": {
            "description": "The INTERNAL serial number of the instrument, e.g., the inventory number of the instrument in a university",
            "examples": [
                "B105863"
            ],
            "type": "string"
        },
        "sku": {
            "description": "Stock Keeping Unit (SKU), i.e. a merchant-specific identifier for a product or service, or the product to which the offer refers.",
            "examples": [
                "345"
            ],
            "type": "string"
        },
        "software": {
            "description": "The name of the software and the version number",
            "examples": [
                "BELMasterâ„¢ 7"
            ],
            "type": "string"
        }
    },
    "type": "object"
}

